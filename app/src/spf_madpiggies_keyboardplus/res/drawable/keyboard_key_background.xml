<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ask="http://schemas.android.com/apk/res-auto">

    <!-- Space key -->

    <item android:drawable="@drawable/key_space_pressed" android:state_pressed="true" ask:key_type_space_alt="true" />
    <item android:drawable="@drawable/key_space_normal" ask:key_type_space_alt="true" />


    <!-- Symbol key -->
    <item android:drawable="@drawable/key_symbol_pressed" android:state_pressed="true" ask:key_type_sw_symbol="true" />
    <item android:drawable="@drawable/key_symbol_normal" ask:key_type_sw_symbol="true" />


    <!-- Alt key -->
    <item android:drawable="@drawable/key_alt_pressed" android:state_pressed="true" ask:key_type_alt="true" />
    <item android:drawable="@drawable/key_alt_normal" ask:key_type_alt="true" />

    <!-- Action key same as functional -->

    <item android:drawable="@drawable/key_function_pressed" android:state_pressed="true" ask:key_type_action="true" />
    <item android:drawable="@drawable/key_function_normal" ask:key_type_action="true" />

    <!-- TopNav keys. -->

    <item android:drawable="@drawable/key_tab_pressed" android:state_pressed="true" ask:key_type_topnav="true" />
    <item android:drawable="@drawable/key_tab_pressed" android:state_selected="true" ask:key_type_topnav="true" />
    <item android:drawable="@drawable/key_tab_normal" ask:key_type_topnav="true" />

    <!-- TopRow keys. -->

    <item android:drawable="@drawable/key_numeric_pressed" android:state_pressed="true" ask:key_type_toprow="true" />
    <item android:drawable="@drawable/key_numeric_normal" ask:key_type_toprow="true" />

    <!-- Functional keys. -->

    <item android:drawable="@drawable/key_function_pressed" android:state_pressed="true" ask:key_type_function="true" />
    <item android:drawable="@drawable/key_function_caps" android:state_selected="true" ask:key_type_function="true" />
    <item android:drawable="@drawable/key_function_normal" ask:key_type_function="true" />

    <!-- Toggle keys. Use checkable/checked state. -->

    <item android:drawable="@drawable/key_function_pressed" android:state_checkable="true" android:state_checked="true" android:state_pressed="true" />
    <item android:drawable="@drawable/key_function_caps" android:state_selected="true" />
    <item android:drawable="@drawable/key_function_pressed" android:state_checkable="true" android:state_pressed="true" />
    <item android:drawable="@drawable/key_function_normal" android:state_checkable="true" />

    <!-- Normal keys -->
    <item android:drawable="@drawable/key_q_pressed" android:state_pressed="true" />
    <item android:drawable="@drawable/key_q_normal" />
</selector>
