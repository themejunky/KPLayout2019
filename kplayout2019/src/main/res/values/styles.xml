<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff40</item>
        <item name="colorPrimaryDark">#7011ff</item>
        <item name="colorAccent">#fff5</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:navigationBarColor">@color/core_bottom_bar_bg_color</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="SplashTheme" parent="AppTheme3">
        <item name="android:windowBackground">@drawable/splash_best</item>
    </style>

    <style name="AppTheme3" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="MyTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>
    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#ffffff</item>
    </style>

    <style name="TabApp" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="TransparentTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>

<item name="android:focusable">false</item>
<item name="android:focusableInTouchMode">false</item>


        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fillViewport">true</item>

        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorPrimary">#ff40</item>
        <item name="colorPrimaryDark">#7011ff</item>
        <item name="colorAccent">#fff5</item>
        <item name="android:windowAnimationStyle">@null</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style  name="TransparentTheme2" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="elevation">0dp</item>
    </style>
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Dialog" parent="AppTheme.NoActionBar">
        <item name="android:background">@color/background</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Intro Tutotorial-->

    <style name="Home_carousel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">370dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/home_carouse_bg</item>
    </style>

    <style name="tutorial_button">
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:background">@drawable/button_selected</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="tutorial_text_nr_button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="tutorial_nr_button">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/background_circle_black_transparent_tutorial</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="tutorial_text_button">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Verical.WrapWrap" parent="WrapWrap"> <item name="android:orientation">vertical</item> </style>

    <style name="WrapWrap.White" parent="WrapWrap">  <item name="android:textColor">@color/white</item> </style>
    <style name="MatchWrap.White" parent="MatchWrap">  <item name="android:textColor">@color/white</item> </style>

    <style name="WrapWrap.Blue" parent="WrapWrap">  <item name="android:textColor">@color/blue</item> </style>

    <style name="MatchWrap.Black" parent="MatchWrap">  <item name="android:textColor">@color/black</item> </style>
    <style name="WrapWrap.Black" parent="WrapWrap">  <item name="android:textColor">@color/black</item> </style>

    <style name="WrapWrap.White.14" parent="WrapWrap.White"> <item name="android:textSize">14sp</item> </style>
    <style name="MatchWrap.White.14" parent="MatchWrap.White"> <item name="android:textSize">14sp</item> </style>


    <style name="Verical.WrapWrap.White" parent="Verical.WrapWrap">
        <item name="android:background">@color/white</item>
    </style>
    <style name="MatchWrap.Black.14" parent="MatchWrap.Black"> <item name="android:textSize">14sp</item> </style>

    <style name="WrapWrap.Black.14" parent="WrapWrap.Black"> <item name="android:textSize">14sp</item> </style>
    <style name="WrapWrap.Black.20" parent="WrapWrap.Black"> <item name="android:textSize">20sp</item> </style>


    <style name="WrapWrap.Blue.14" parent="WrapWrap.Blue"> <item name="android:textSize">14sp</item> </style>


    <!--Buttons-->

    <style name="blue_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/home_buttons_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/button_text_color_blue</item>
        <item name="android:textSize">@dimen/home_buttons_text_size</item>
        <item name="android:background">@drawable/buttons_blue</item>
        <item name="android:layout_marginBottom">@dimen/home_buttons_margin_bottom</item>
    </style>

    <style name="green_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/home_buttons_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/button_text_color_green</item>
        <item name="android:textSize">@dimen/home_buttons_text_size</item>
        <item name="android:background">@drawable/buttons_green</item>
        <item name="android:layout_marginBottom">@dimen/home_buttons_margin_bottom</item>
    </style>

    <style name="btnGoogleImage">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/google_play</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:contentDescription">@string/apply_text_5</item>
    </style>

    <style name="btnText" parent="MatchWrap.White.14">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="Cube130">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">130dp</item>
    </style>

    <style name="TextView_GB_Logo2">
        <item name="android:layout_weight">1.7</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginRight">20sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Image_shake">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/button_share</item>
    </style>

    <style name="ListingCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/listing_image_height</item>
        <item name="android:layout_margin">3dp</item>
    </style>


    <!--No Internet Layout-->
    <style name="noInternet_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/icon_nointernet</item>
    </style>

    <style name="noInternet_text_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/noInternet_view_margin_top</item>
        <item name="android:textSize">@dimen/noInternet_text_size_normal</item>
    </style>

    <style name="noInternet_text_big" parent="noInternet_text_normal">
        <item name="android:textSize">@dimen/noInternet_text_size_big</item>
    </style>

    <style name="noInternet_btn_reload">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/noInternet_text_size_normal</item>
        <item name="android:paddingTop">@dimen/noInternet_button_padding_tb</item>
        <item name="android:paddingBottom">@dimen/noInternet_button_padding_tb</item>
        <item name="android:paddingLeft">@dimen/noInternet_button_padding_lr</item>
        <item name="android:paddingRight">@dimen/noInternet_button_padding_lr</item>
        <item name="android:layout_marginTop">@dimen/noInternet_view_margin_top</item>
        <item name="android:background">@drawable/button_reload</item>
        <item name="android:text">@string/noInternetReload</item>
    </style>



    <style name="noInternet_btn_cancel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/noInternet_text_size_normal</item>
        <item name="android:paddingTop">@dimen/noInternet_button_padding_tb</item>
        <item name="android:paddingBottom">@dimen/noInternet_button_padding_tb</item>
        <item name="android:paddingLeft">@dimen/noInternet_button_padding_lr</item>
        <item name="android:paddingRight">@dimen/noInternet_button_padding_lr</item>
        <item name="android:layout_marginTop">@dimen/noInternet_view_margin_top</item>
        <item name="android:background">@drawable/button_cancel</item>
        <item name="android:text">@string/noInternetCancel</item>
    </style>





    <style name="noInternet_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>


</resources>
