<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fragment_container">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#fff</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="yellowbadge_container">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/yellowbadge_background</item>
    </style>

    <style name="yellowbadge_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/yellowbadge_textcolor</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="tutorial_popup_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/tj_white_round_corners</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="tutorial_popup_small_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/popup_small_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="tutorial_popup_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/popup_big_text_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tutorial_popup_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/popup_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tutorial_popup_btn">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/tj_tutorial_btn_anim</item>
    </style>
    
    <style name="tutorial_popup_btn_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="barContainer">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/tj_gradient_angle</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="barIconBack">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:src">@drawable/tj_back</item>
    </style>

    <style name="barTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">#fff</item>
    </style>

</resources>