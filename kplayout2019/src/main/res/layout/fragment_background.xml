<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:selector="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.keyboard_themejunky.lightkeyboard.api.CircleColorSelector
        android:id="@+id/selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:entries="@array/background_colors"
        selector:color_radius="15dp"
        selector:components_circle_1="6"
        selector:layout_distance_1="45dp"
        selector:layout_distance_2="90dp"
        selector:rotation_1="23"
        selector:rotation_2="80"
        selector:selected_stroke_width="4dp" />

</RelativeLayout>