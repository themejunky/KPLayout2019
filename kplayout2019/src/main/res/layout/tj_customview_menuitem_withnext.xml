<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/keyboard_linear_common"
    android:orientation="vertical">

    <LinearLayout
        style="@style/keyboard_linear_common"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mImage"
            style="@style/keyboard_settings_item_image" />

        <LinearLayout style="@style/keyboard_settings_item_text_container">

            <TextView
                android:id="@+id/mTitle"
                style="@style/keyboard_settings_item_title" />

            <TextView
                android:id="@+id/mSubtitle"
                style="@style/keyboard_settings_item_subtitle" />

        </LinearLayout>

        <ImageView style="@style/keyboard_settings_item_arrow" />

    </LinearLayout>

    <View
        style="@style/keyboard_settings_item_line"/>


</LinearLayout>